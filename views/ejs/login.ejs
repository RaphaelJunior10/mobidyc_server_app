<body class="hold-transition login-page" style="height: auto; padding-top: 20px;">
    <div class="login-box" >
        <div class="login-logo">
            <h2 style="display: inline-block; font-size: 50px;font-weight: bold;">
                <span style="color: #3498db;border: 3px solid #EDF1FF !important;padding-left:8px;padding-right:8px" class=" font-weight-bold border px-2 mr-1">M</span>
</h2><span style="color:#3498db;font-weight: bold;">obidyc</span>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg" style="font-size: 20px;font-weight: bold;">Connexion</p>
                
                    <div style="display: none;" class="div-alert alert alert-warning alert-dismissible fae show" role="alert">
                        
                    </div>
                
                <form  method="post" action="/webLogin/traitement" class="formConnexion">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" name="numero" placeholder="Adresse mail" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" name="password" placeholder="Password" minlength="3" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="">
                            <div class="g-recaptcha" data-sitekey="6LfJ9_UoAAAAAJ4hc5CqAN4zjMldzKrbey05j4lL"></div>
                            <br>
                    </div>
                    
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary btn-block">Connexion</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>


                <!-- /.social-auth-links -->
                <br>
                
                
                <p class="mb-1" style="float: right;">
                    <a href="/forgot-password">Mot de passe oublié ?</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <%- include('./footer');%>
    <!-- /.login-box -->

    <!--<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>-->

    <!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>-->

    <!--<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>-->
    <script src="/js/fonctions.js"></script>
    <script>
        var err = GET('err');
        var divAlert = document.querySelector(".div-alert");
        if(err == 404){
            divAlert.innerHTML = "Imformations incorrectes, veuillez réesayer";
            divAlert.style.display = "block";
        }else if(err == 450){
            divAlert.innerHTML = "Le Captchat est invalide, veuillez réesayer";
            divAlert.style.display = "block";
        }
    </script>
    <script>
        document.querySelector(".formConnexion").addEventListener("submit", function(e){
            e.preventDefault();

            var formData = new FormData(document.querySelector(".formConnexion"));
            var captchaResponse = formData.get("g-recaptcha-response")

            if(captchaResponse != ''){
                e.target.submit();
            }
        })
    </script>

</body>


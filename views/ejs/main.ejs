    <script>
        var err = GET('err');
        var divAlert = document.querySelector(".div-alert");
        if(err == 404){
            divAlert.innerHTML = "Imformations incorrectes, veuillez réesayer";
            divAlert.style.display = "block";
        }else if(err == 450){
            divAlert.innerHTML = "Le Captchat est invalide, veuillez réesayer";
            divAlert.style.display = "block";
        }
    </script>
    <script>
        document.querySelector(".formConnexion").addEventListener("submit", function(e){
            e.preventDefault();

            var formData = new FormData(document.querySelector(".formConnexion"));
            var captchaResponse = formData.get("g-recaptcha-response")

            if(captchaResponse != ''){
                e.target.submit();
            }
        })
    </script>

